# PUK Dashboard - Umgebungsvariablen
# Kopieren Sie diese Datei nach .env und passen Sie die Werte an

# =============================================================================
# DATENBANK KONFIGURATION
# =============================================================================

# SQLite (Standard für Entwicklung/kleine Installationen)
DATABASE_URL=sqlite:///app/data/app.db

# PostgreSQL (Empfohlen für Produktion)
# DATABASE_URL=postgresql://dashboard_user:SECURE_PASSWORD@postgres:5432/puk_dashboard
# DB_PASSWORD=SECURE_PASSWORD_HERE

# =============================================================================
# SICHERHEIT
# =============================================================================

# Demo-Authentifizierung (NUR für Entwicklung!)
# In Produktion MUSS dies auf 0 gesetzt sein
ALLOW_DEMO_AUTH=0

# Debug-Modus (NUR für Entwicklung!)
DEBUG=0

# Secret Key für Session/Token-Signierung
# WICHTIG: In Produktion durch zufälligen String ersetzen!
# Generieren mit: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_STRING_IN_PRODUCTION

# =============================================================================
# LOGGING
# =============================================================================

# Log-Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# ANWENDUNGS-KONFIGURATION
# =============================================================================

# Zeitzone (wichtig für Business-Date Berechnung)
TZ=Europe/Zurich

# CSV Import Limits
MAX_CSV_ROWS=10000
MAX_CSV_FILE_SIZE_MB=50

# Session Timeout (in Minuten)
SESSION_TIMEOUT_MINUTES=480

# =============================================================================
# NETZWERK & PORTS
# =============================================================================

# Backend Port (intern)
BACKEND_PORT=8000

# Frontend Port (extern)
FRONTEND_PORT=8080

# PostgreSQL Port (falls extern erreichbar)
POSTGRES_PORT=5432

# =============================================================================
# RESSOURCEN-LIMITS (für Docker)
# =============================================================================

# Backend
BACKEND_CPU_LIMIT=2.0
BACKEND_MEMORY_LIMIT=1G

# Frontend
FRONTEND_CPU_LIMIT=1.0
FRONTEND_MEMORY_LIMIT=256M

# PostgreSQL
POSTGRES_CPU_LIMIT=1.0
POSTGRES_MEMORY_LIMIT=512M

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================

# Backup-Verzeichnis (außerhalb Container)
BACKUP_DIR=./backups

# Automatische Backup-Erstellung aktivieren
ENABLE_AUTO_BACKUP=true

# Backup-Intervall (in Stunden)
BACKUP_INTERVAL_HOURS=24

# Anzahl der aufzubewahrenden Backups
BACKUP_RETENTION_COUNT=30
